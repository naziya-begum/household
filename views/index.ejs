<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="stylesheet" href="style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"></script>
    <title>DATA</title>
</head>

<body>
    <h1>SEARCH..</h1>
    <div class="main">
        <form method="post" action="/">
            <div class="form-group">


                <input type="text" id="input" class="form-control" autocomplete="off" name="name"
                    placeholder="Search By-Name.....">

                <ul id="list">
                    <% for(var j=0; j< name.length; j++){ %>
                        <li>
                            <%= name[j].Name %>
                        </li>
                        <% } %>
                </ul>
                <div class="submit">
                    <img src="images/data.png" class="first">
                    <button type="submit" class="btn btn-dark">submit</button>
                    <img src="images/database.png" class="second">
                </div>

            </div>



        </form>
    </div>
    <div class="table">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Household Head</th>
                    <th scope="col">Adhar</th>
                    <th scope="col">Gender</th>
                    <th scope="col">DOB</th>
                    <th scope="col">Cluster</th>
                    <th scope="col">Presen Working Volunteer Name</th>
                    <th scope="col">Secrateriate</th>
                </tr>
            </thead>
            <tbody>
                <% if (names) { %>
                    <tr>
                        <th scope="row">
                            <%= names.Name %>
                        </th>
                        <td>
                            <%= names.HouseholdHead %>
                        </td>
                        <td>
                            <%= names.Adhar %>
                        </td>
                        <td>
                            <%= names.Gender %>
                        </td>
                        <td>
                            <%= names.DOB %>
                        </td>
                        <td>
                            <%= names.Cluster %>
                        </td>
                        <td>
                            <%= names.PresenWorkingVolunteerName %>
                        </td>
                        <td>
                            <%= names.Secrateriate %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>

    </div>

</body>








<script>
    $('#input').on('input', function () {
        const search = $(this).val().toLowerCase();
        $('#list li').filter(function () {
            return $(this).text().toLowerCase().indexOf(search) === -1;
        }).hide();
        $('#list li').filter(function () {
            return $(this).text().toLowerCase().indexOf(search) > -1;
        }).show();
    });

    $(document).ready(function () {
        $("#list").on("click", "li", function () {
            // Get the text content of the clicked li element and remove any leading/trailing spaces
            const textContent = $(this).text().trim();

            // Set the value of the input element to the trimmed text content
            const value = $("#input").val(textContent);
            $('#list li').hide();

        });
    });

</script>

</html>
